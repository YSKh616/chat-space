%div.sidebar
  %div.sidebar__user
    %div.sidebar__user--name
      = current_user.name
    %div.sidebar__user--edit
      = link_to new_group_path do
        %i.fa.fa-pencil-square-o.fa-lg
      = link_to edit_user_path(current_user) do
        %i.fa.fa-cog.fa-lg

  %div.sidebar__group
    - @groups.each do |g|
      %p.sidebar__group--group-name= g.name
      %p.sidebar__group--group-new-message
        = g.find_last_message

