= form_for @group, id:"new_chat_group", class:"new_chat_group" do |f|
  - if @group.errors.any?
    .chat-group-form__errors
      %h2= "#{@group.errors.count}件のエラーがあります。"
      - @group.errors.full_messages.each do |message|
        %ul
          %li= message
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{for: "chat_group_name"} グループ名
    .chat-group-form__field--right
      #chat_group_name
        = f.text_field :name, placeholder: "グループ名を入力してください", class: "chat-group-form__input"
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{for: "chat_group_チャットメンバー"} チャットメンバーを追加
    .chat-group-form__field--right
      = f.collection_check_boxes :user_ids, User.all, :id, :name

  .chat-group-form__field.clearfix
    / この部分はインクリメンタルサーチ（ユーザー追加の非同期化のときに使用します
    /
      <div class='chat-group-form__field--left'>
      <label class="chat-group-form__label" for="chat_group_チャットメンバーを追加">チャットメンバーを追加</label>
      </div>
      <div class='chat-group-form__field--right'>
      <div class='chat-group-form__search clearfix'>
      <input class='chat-group-form__input' id='user-search-field' placeholder='追加したいユーザー名を入力してください' type='text'>
      </div>
      <div id='user-search-result'></div>
      </div>
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :チャットメンバー, class: 'chat-group-form__field--label', id: 'chat-group_チャットメンバー'
    .chat-group-form__field--right
      - @group.groups_users.each do |group_user|
        = group_user.user.name
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "Save", class:"chat-group-form__action-btn"
      = f.hidden_field :group_id, value:"#{@group.id}"
